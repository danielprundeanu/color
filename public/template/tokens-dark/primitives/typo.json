{
  "font-family": {
    "100": {
      "$type": "fontFamilies",
      "$value": "Montserrat",
      "$description": "Primary font family."
    },
    "200": {
      "$type": "fontFamilies",
      "$value": "Nunito Sans",
      "$description": "Secondary font family."
    },
    "300": {
      "$type": "fontFamilies",
      "$value": "Tahoma",
      "$description": "Used only for email font.\n\nChoose from: \n- SERIF: Times New Roman, Georgia, Garamond\n- SANS-SERIF: Aria, Helvetica, Verdana, Tahoma, Trebuchet MS, Lucida Sans Unicode\n- MONOSPACE: Courier New"
    }
  },
  "font-size": {
    "40": {
      "$type": "fontSizes",
      "$value": "{font-size.base} - 6"
    },
    "50": {
      "$type": "fontSizes",
      "$value": "{font-size.base} - 5"
    },
    "60": {
      "$type": "fontSizes",
      "$value": "{font-size.base} - 4"
    },
    "70": {
      "$type": "fontSizes",
      "$value": "{font-size.base} - 3"
    },
    "80": {
      "$type": "fontSizes",
      "$value": "{font-size.base} - 2"
    },
    "90": {
      "$type": "fontSizes",
      "$value": "{font-size.base} - 1"
    },
    "100": {
      "$type": "fontSizes",
      "$value": "{font-size.base}"
    },
    "200": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.100} * {font-size.ratio})"
    },
    "300": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.200} * {font-size.ratio})"
    },
    "400": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.300} * {font-size.ratio})"
    },
    "500": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.400} * {font-size.ratio})"
    },
    "600": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.500} * {font-size.ratio})"
    },
    "700": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.600} * {font-size.ratio})"
    },
    "800": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.700} * {font-size.ratio})"
    },
    "900": {
      "$type": "fontSizes",
      "$value": "roundTo({font-size.800} * {font-size.ratio})"
    },
    "ratio": {
      "$type": "number",
      "$value": "1.2"
    },
    "base": {
      "$type": "fontSizes",
      "$value": "16"
    }
  },
  "font-weight": {
    "100": {
      "$type": "fontWeights",
      "$value": "100"
    },
    "200": {
      "$type": "fontWeights",
      "$value": "200"
    },
    "300": {
      "$type": "fontWeights",
      "$value": "300"
    },
    "400": {
      "$type": "fontWeights",
      "$value": "400"
    },
    "500": {
      "$type": "fontWeights",
      "$value": "500"
    },
    "600": {
      "$type": "fontWeights",
      "$value": "600"
    },
    "700": {
      "$type": "fontWeights",
      "$value": "700"
    },
    "800": {
      "$type": "fontWeights",
      "$value": "800"
    },
    "900": {
      "$type": "fontWeights",
      "$value": "900"
    },
    "200-italic": {
      "$type": "text",
      "$value": "200"
    },
    "300-italic": {
      "$type": "text",
      "$value": "300"
    },
    "400-italic": {
      "$type": "text",
      "$value": "400"
    },
    "500-italic": {
      "$type": "text",
      "$value": "500"
    },
    "600-italic": {
      "$type": "text",
      "$value": "600"
    },
    "700-italic": {
      "$type": "text",
      "$value": "700"
    },
    "800-italic": {
      "$type": "text",
      "$value": "800"
    },
    "900-italic": {
      "$type": "text",
      "$value": "900"
    }
  },
  "line-height": {
    "lg": {
      "$type": "lineHeights",
      "$value": "1.4"
    },
    "md": {
      "$type": "lineHeights",
      "$value": "1.2"
    },
    "sm": {
      "$type": "lineHeights",
      "$value": "1"
    },
    "base": {
      "$type": "lineHeights",
      "$value": "{font-size.base}",
      "$description": "Line-Height equal with the base body size."
    }
  }
}