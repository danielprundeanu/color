{
  "top-nav-ext": {
    "wrp": {
      "space": {
        "$type": "spacing",
        "$value": "{space.inset.xxs}",
        "$description": "Padding applied on top nav extension wrapper(mobile)."
      }
    },
    "space": {
      "x": {
        "$type": "spacing",
        "$value": "{space.inset.sm}",
        "$description": "Left & right top nav extension padding (mobile)."
      },
      "y": {
        "$type": "spacing",
        "$value": "{space.inset.xxs}",
        "$description": "Top & Bottom top nav extension padding (mobile)."
      }
    },
    "radius": {
      "$type": "borderRadius",
      "$value": "{radius.md}",
      "$description": "Top Nav extension radius (mobile)."
    },
    "border": {
      "all": {
        "$type": "borderWidth",
        "$value": "{border.xs}",
        "$description": "Top Nav extension border width (mobile)."
      }
    },
    "max-width": {
      "$type": "sizing",
      "$value": "1200px",
      "$description": "Top Nav Extension -> max width."
    },
    "height": {
      "$type": "sizing",
      "$value": "40px"
    }
  },
  "aux-top-nav-ext": {
    "gap": {
      "sm": {
        "$type": "spacing",
        "$value": "{top-nav-ext.gap.base} / 2",
        "$description": "Used as horizontal padding for left, center, right inner containers."
      },
      "md": {
        "$type": "spacing",
        "$value": "{top-nav-ext.gap.base}",
        "$description": "Vertical gap between elements (applied on slot component)."
      }
    }
  }
}